{
  "name": "golden-sample-app-e2e",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "tags": [],
  "implicitDependencies": ["golden-sample-app"],
  "// targets": "to see all targets run: nx show project golden-sample-app-e2e --web",
  "targets": {
    "e2e-mocks": {
      "command": "npx playwright test --config=apps/golden-sample-app-e2e/playwright.localhost-mocks.config.ts",
      "configurations": {
        "chrome": {
          "args": ["--project=localhost-mocks-chrome"]
        },
        "firefox": {
          "args": ["--project=localhost-mocks-firefox"]
        },
        "safari": {
          "args": ["--project=localhost-mocks-safari"]
        }
      },
      "defaultConfiguration": "chrome"
    },
    "e2e-visual": {
      "command": "npx playwright test --config=apps/golden-sample-app-e2e/playwright.localhost-mocks.config.ts",
      "configurations": {
        "chrome": {
          "args": ["--project=localhost-mocks-visual-chrome"]
        },
        "firefox": {
          "args": ["--project=localhost-mocks-visual-firefox"]
        },
        "safari": {
          "args": ["--project=localhost-mocks-visual-safari"]
        }
      },
      "defaultConfiguration": "chrome"
    },
    "e2e-a11y": {
      "command": "npx playwright test --config=apps/golden-sample-app-e2e/playwright.localhost-mocks.config.ts",
      "configurations": {
        "chrome": {
          "args": ["--project=localhost-mocks-a11y-chrome"]
        },
        "firefox": {
          "args": ["--project=localhost-mocks-a11y-firefox"]
        },
        "safari": {
          "args": ["--project=localhost-mocks-a11y-safari"]
        }
      },
      "defaultConfiguration": "chrome"
    },

    "e2e-localhost-sndbx": {
      "command": "npx playwright test --config=apps/golden-sample-app-e2e/playwright.localhost-sndbx.config.ts",
      "configurations": {
        "chrome": {
          "args": ["--project=localhost-sndbx-chrome"]
        },
        "firefox": {
          "args": ["--project=localhost-sndbx-firefox"]
        },
        "safari": {
          "args": ["--project=localhost-sndbx-safari"]
        }
      },
      "defaultConfiguration": "chrome"
    },

    "e2e-remote": {
      "command": "npx playwright test --config=apps/golden-sample-app-e2e/playwright.remote.config.ts",
      "configurations": {
        "chrome": {
          "args": ["--project=remote-chrome"]
        },
        "firefox": {
          "args": ["--project=remote-firefox"]
        },
        "safari": {
          "args": ["--project=remote-safari"]
        }
      },
      "defaultConfiguration": "chrome"
    }
  }
}

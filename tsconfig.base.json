{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@backbase/e2e-test-accelerators/*": [
        "libs/shared/util/e2e-test-accelerators/*/index.ts"
      ],
      "@backbase/e2e-tests": ["libs/shared/util/e2e-tests/src/index.ts"],
      "@backbase/shared/feature/auth": [
        "libs/shared/feature/auth/src/index.ts"
      ],
      "@backbase/shared/feature/communication": [
        "libs/shared/feature/communication/src/index.ts"
      ],
      "@backbase/shared/feature/navigation-menu": [
        "libs/shared/feature/navigation-menu/src/index.ts"
      ],
      "@backbase/shared/feature/user-context": [
        "libs/shared/feature/user-context/src/index.ts"
      ],
      "@backbase/shared/feature/view-wrapper": [
        "libs/shared/feature/view-wrapper/src/index.ts"
      ],
      "@backbase/shared/util/app-core": [
        "libs/shared/util/app-core/src/index.ts"
      ],
      "@backbase/shared/util/config": ["libs/shared/util/config/src/index.ts"],
      "@backbase/shared/util/permissions": [
        "libs/shared/util/permissions/src/index.ts"
      ],
      "@backbase/shared/util/standalone-helper": [
        "libs/shared/util/standalone-helper/index.ts"
      ],
    }
  }
}

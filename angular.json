{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "golden-sample-app": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/golden-sample-app",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.scss",
              "node_modules/@backbase/backbase-theme/scss/main.scss"
            ],
            "scripts": [],
            "vendorChunk": true,
            "extractLicenses": false,
            "buildOptimizer": false,
            "sourceMap": true,
            "optimization": false,
            "namedChunks": true
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "2mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ]
            },
            "styles_replace-entire-icon-font-when-names-match": {
              "styles": [
                "src/styles_replace-entire-icon-font-when-names-match.scss"                
              ],
            },
            "styles_replace-entire-icon-font-when-names-dont-match": {
              "styles": [
                "src/styles_replace-entire-icon-font-when-names-dont-match.scss"
              ],
            },
            "styles_replace-some-icons": {
              "styles": [
                "src/styles_replace-some-icons.scss"
              ],
            },
            "styles_replace-icon-with-svg": {
              "styles": [
                "src/styles_replace-icon-with-svg.scss"
              ],
            }
          },
          "defaultConfiguration": ""
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "golden-sample-app:build",
            "proxyConfig": "./proxy.conf.json"
          },
          "configurations": {
            "production": {
              "browserTarget": "golden-sample-app:build:production"
            },
            "styles_replace-entire-icon-font-when-names-match": {
              "browserTarget": "golden-sample-app:build:styles_replace-entire-icon-font-when-names-match"
            },
            "styles_replace-entire-icon-font-when-names-dont-match": {
              "browserTarget": "golden-sample-app:build:styles_replace-entire-icon-font-when-names-dont-match"
            },
            "styles_replace-some-icons": {
              "browserTarget": "golden-sample-app:build:styles_replace-some-icons"
            },
            "styles_replace-icon-with-svg": {
              "browserTarget": "golden-sample-app:build:styles_replace-icon-with-svg"
            }  
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "golden-sample-app:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.scss"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "src/**/*.ts",
              "src/**/*.html"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "golden-sample-app:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "golden-sample-app:serve:production"
            }
          }
        }
      }
    },
    "transfer-journey": {
      "projectType": "library",
      "root": "projects/transfer-journey",
      "sourceRoot": "projects/transfer-journey/src",
      "prefix": "bb",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/transfer-journey/tsconfig.lib.json",
            "project": "projects/transfer-journey/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/transfer-journey/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/transfer-journey/src/test.ts",
            "tsConfig": "projects/transfer-journey/tsconfig.spec.json",
            "karmaConfig": "projects/transfer-journey/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/transfer-journey/**/*.ts",
              "projects/transfer-journey/**/*.html"
            ]
          }
        }
      }
    },
    "transactions-journey": {
      "projectType": "library",
      "root": "projects/transactions-journey",
      "sourceRoot": "projects/transactions-journey/src",
      "prefix": "bb",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/transactions-journey/tsconfig.lib.json",
            "project": "projects/transactions-journey/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/transactions-journey/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/transactions-journey/src/test.ts",
            "tsConfig": "projects/transactions-journey/tsconfig.spec.json",
            "karmaConfig": "projects/transactions-journey/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/transactions-journey/**/*.ts",
              "projects/transactions-journey/**/*.html"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "golden-sample-app",
  "cli": {
    "defaultCollection": "@angular-eslint/schematics"
  }
}
